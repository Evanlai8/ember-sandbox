<header class="container">
  <h1>Ember Sandbox</h1>
  <h3>Like a child, play your toy in the sandbox</h3>
  {{back-to-index currentRouteName}}
</header>

<hr />

<main class="container" role="main">
  {{#if remindAuth}}
    <section class="alert alert-warning">
      <div class="grid -middle -between">
        <strong>{{remindAuth}}</strong>

        <a href="https://github.com/login/oauth/authorize?client_id=93fe8b9a14b53e85c248" class="btn btn-success">
          Authorize with Github API
        </a>
      </div>
    </section>
  {{/if}}

  {{outlet}}
</main>
